{
  "name": "veto",
  "version": "0.0.0",
  "description": "Veto software",
  "main": "null",
  "repository": "git@github.com:Veriphi/veto.git",
  "author": "Veriphi",
  "license": "PRIVATE",
  "private": true,
  "workspaces": [
    "packages/veto-*",
    "packages/*-app",
    "packages/shared/*"
  ],
  "scripts": {
    "dev": "yarn cyphernode:start && yarn start",
    "start": "NODE_ENV=${NODE_ENV:-dev} concurrently --kill-others-on-fail 'yarn start:backend' 'yarn start:frontend'",
    "cyphernode:start": "SKIP_VETO=true ./scripts/start.sh",
    "cyphernode:stop": "SKIP_VETO=true ./scripts/stop.sh",
    "cyphernode:setup": "SKIP_VETO=true ./scripts/setup.sh",
    "build": "yarn workspace veto-backend build && yarn workspace veto-frontend build && yarn workspace screen-app build",
    "start:frontend": "NODE_ENV=${NODE_ENV:-dev} yarn workspace veto-frontend start",
    "start:backend": "NODE_ENV=${NODE_ENV:-dev} yarn workspace veto-backend start:watch",
    "start:screen": "NODE_ENV=${NODE_ENV:-dev} yarn workspace screen-app start",
    "start:maintenance": "NODE_ENV=${NODE_ENV:-dev} SCRIPT_LOCATION=${SCRIPT_LOCATION:-$(pwd)/scripts} yarn workspace maintenance-app start",
    "test:unit": "jest --testPathIgnorePatterns='packages/.+/tests/integration/'",
    "test:integration": "jest --testPathPattern='./packages/.+/tests/integration/'",
    "lint": "prettier -l '**/*.{ts,tsx,js,jsx,json}'",
    "lint-fix": "prettier --write '**/*.{ts,tsx,js,jsx,json}'"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@types/jest": "^25.1.2",
    "concurrently": "^5.0.2",
    "husky": "^4.0.6",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "ts-jest": "^25.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
